    <!-- Admin Panel -->
    <div id="adminPanel">
        <h2 style="color:#ffd700;">Admin Control Panel</h2>
        <button onclick="logout()" style="float:right; background:#ff6b6b; color:white; padding:12px 25px; border:none; border-radius:50px;">Logout</button>
        <h3 style="color:#ffd700;">Add New Product</h3>
        <div class="form-group"><input type="text" id="pName" placeholder="Product Name"></div>
        <div class="form-group"><input type="text" id="pPrice" placeholder="Price (₨)"></div>
        <div class="form-group"><input type="text" id="pOldPrice" placeholder="Old Price"></div>
        <div class="form-group"><input type="text" id="pDiscount" placeholder="Discount %"></div>
        <div class="form-group"><input type="text" id="pSold" placeholder="Sold Count"></div>
        <div class="form-group"><input type="text" id="pImage" placeholder="Image URL"></div>
        <div class="form-group"><textarea id="pReview" placeholder="Short Review"></textarea></div>
        <button class="btn-admin" onclick="addProduct()">Add Product</button>

        <h3 style="margin-top:40px; color:#ffd700;">Change Password</h3>
        <input type="password" id="oldPass" placeholder="Old Password">
        <input type="password" id="newPass" placeholder="New Password">
        <button class="btn-admin" onclick="changePassword()">Change Password</button>
    </div>

    <script>
        let products = JSON.parse(localStorage.getItem('munnaProducts')) || [];
        let adminPass = localStorage.getItem('munnaAdminPass') || "12345";

        function loadProducts() {
            const container = document.getElementById('productContainer');
            container.innerHTML = '';
            products.forEach((p, i) => {
                container.innerHTML += `
                <div class="product-card">
                    ${p.discount ? `<span class="discount">${p.discount} OFF</span>` : ''}
                    <span class="sold-badge">Sold ${p.sold || 0}</span>
                    <img src="${p.image}" class="product-img" onerror="this.src='https://via.placeholder.com/300x300?text=No+Image'">
                    <div class="product-info">
                        <h3>${p.name}</h3>
                        <div class="stars">★★★★★</div>
                        <p style="font-size:14px;">${p.review || ''}</p>
                        <div class="price">₨${p.price} ${p.oldPrice ? `<span class="old-price">₨${p.oldPrice}</span>` : ''}</div>
                        <div class="actions">
                            <i class="far fa-heart" onclick="alert('Added to favourites')"></i>
                            <i class="fas fa-cart-plus" onclick="alert('Added to cart')"></i>
                            <a href="https://wa.me/923100378050?text=Hello! I want to buy ${encodeURIComponent(p.name)} - ₨${p.price}" target="_blank">
                                <i class="fab fa-whatsapp" style="color:#25d366;"></i>
                            </a>
                            <i class="fas fa-trash" onclick="deleteProduct(${i})" style="color:#ff6b6b; display:${document.getElementById('adminPanel').style.display==='block'?'inline':'none'};" id="del${i}"></i>
                        </div>
                    </div>
                </div>`;
            });
        }

        function addProduct() {
            const p = {
                name: document.getElementById('pName').value || "New Product",
                price: document.getElementById('pPrice').value || "0",
                oldPrice: document.getElementById('pOldPrice').value || "",
                discount: document.getElementById('pDiscount').value || "",
                sold: document.getElementById('pSold').value || "0",
                image: document.getElementById('pImage').value || "https://via.placeholder.com/300x300?text=Product",
                review: document.getElementById('pReview').value || ""
            };
            products.push(p);
            localStorage.setItem('munnaProducts', JSON.stringify(products));
            loadProducts();
            alert('Product Added Successfully!');
            // Clear form
            document.querySelectorAll('#adminPanel input, #adminPanel textarea').forEach(el => el.value = '');
        }

        function deleteProduct(i) {
            if(confirm('Delete this product permanently?')) {
                products.splice(i,1);
                localStorage.setItem('munnaProducts', JSON.stringify(products));
                loadProducts();
            }
        }

        function adminLogin() {
            const user = document.getElementById('username').value;
            const pass = document.getElementById('password').value;
            if (user === 'admin' && pass === adminPass) {
                closeModal('loginModal');
                document.getElementById('adminPanel').style.display = 'block';
                loadProducts();
            } else alert('Wrong username or password!');
        }

        function logout() { document.getElementById('adminPanel').style.display = 'none'; loadProducts(); }

        function changePassword() {
            const old = document.getElementById('oldPass').value;
            const newp = document.getElementById('newPass').value;
            if (old === adminPass && newp) {
                adminPass = newp;
                localStorage.setItem('munnaAdminPass', newp);
                alert('Password changed successfully!');
                document.getElementById('oldPass').value = '';
                document.getElementById('newPass').value = '';
            } else alert('Old password wrong or new password empty!');
        }

        function openModal(id) { document.getElementById(id).style.display = 'flex'; }
        function closeModal(id) { document.getElementById(id).style.display = 'none'; }
        window.onclick = e => { if(e.target.classList.contains('modal')) e.target.style.display = 'none'; }

        loadProducts();
    </script>
